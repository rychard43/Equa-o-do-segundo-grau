<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="105dp"
        android:background="@android:color/background_light"
        android:text="digite o a:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        android:text="digite o b:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="38dp"
        android:background="@android:color/background_light"
        android:text="digite o c:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Digite os dados"
        android:textSize="18sp" />

    <Button
        android:id="@+id/calcularId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:text="Calcular" />

    <TextView
        android:id="@+id/x1Id"
        android:layout_width="149dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="143dp"
        android:background="@android:color/background_light"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/x2Id"
        android:layout_width="149dp"
        android:layout_height="51dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignTop="@+id/x1Id"
        android:background="@android:color/background_light"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/textAId"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="137dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textBId"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/textCId"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textCId"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignTop="@+id/textAId"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="18sp" />
</RelativeLayout>